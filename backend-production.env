# Configuration Backend Production - ENG RND
# Fichier: backend/.env (sur le serveur)

# ============================================
# BASE DE DONNÉES
# ============================================
MONGODB_URI=mongodb://localhost:27017/eng-rnd-production
# Ou MongoDB Atlas: mongodb+srv://user:password@cluster.mongodb.net/eng-rnd

# ============================================
# SÉCURITÉ
# ============================================
JWT_SECRET=VOTRE_CLE_SECRETE_SUPER_FORTE_PRODUCTION_2024
JWT_EXPIRES_IN=24h

# ============================================
# SERVEUR
# ============================================
PORT=5000
NODE_ENV=production

# ============================================
# CORS - Domaines autorisés
# ============================================
ALLOWED_ORIGINS=https://eng-rnd.com,https://www.eng-rnd.com,https://admin.eng-rnd.com

# ============================================
# EMAIL (pour les notifications)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=contact@eng-rnd.com
EMAIL_PASS=VOTRE_MOT_DE_PASSE_EMAIL

# ============================================
# SÉCURITÉ ADMIN
# ============================================
ADMIN_IPS=41.248.XXX.XXX,192.168.1.XXX
RATE_LIMIT_ADMIN=5
RATE_LIMIT_WINDOW=15

# ============================================
# LOGS
# ============================================
LOG_LEVEL=info
LOG_FILE=/var/log/eng-rnd/backend.log

# ============================================
# UPLOADS
# ============================================
UPLOAD_PATH=/var/www/eng-rnd/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=pdf,doc,docx

# ============================================
# MONITORING
# ============================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true